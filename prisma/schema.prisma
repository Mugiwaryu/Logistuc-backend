generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// El modelo de datos para el Pedido de LOGISTUC (MVP)
model Pedido {
  id            String   @id @default(uuid()) // Identificador unico y automatico
  direccion     String // Crítico: La direccion de entrega
  cliente       String // El nombre del cliente
  detalle       String // Detalles del pedido
  dechaCreacion DateTime @default(now()) // Registro de cuando se creó
}
